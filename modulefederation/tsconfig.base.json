{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modulefederation/common": ["libs/common/src/index.ts"],
      "@modulefederation/components": ["libs/components/src/index.ts"],
      "@modulefederation/form/designer": ["libs/form/designer/src/index.ts"],
      "@modulefederation/form/renderer": ["libs/form/renderer/src/index.ts"],
      "@modulefederation/form/theme/design": [
        "libs/form/theme/design/src/index.ts"
      ],
      "@modulefederation/form/theme/runtime": [
        "libs/form/theme/runtime/src/index.ts"
      ],
      "@modulefederation/portal": ["libs/portal/src/index.ts"],
      "@modulefederation/questionnaire/designer": [
        "libs/questionnaire/designer/src/index.ts"
      ],
      "@modulefederation/questionnaire/renderer": [
        "libs/questionnaire/renderer/src/index.ts"
      ],
      "react-remote/Module": ["apps/react/react-remote/src/remote-entry.ts"],
      "workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
