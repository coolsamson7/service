{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modulefederation/common": ["libs/common/src/index.ts"],
      "@modulefederation/components": ["libs/components/src/index.ts"],
      "@modulefederation/portal": ["libs/portal/src/index.ts"],
      "mf/Routes": ["mf/src/app/remote-entry/entry.routes.ts"],
      "mf/mf": ["apps"],
      "workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
